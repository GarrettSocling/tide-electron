{
  "scripts": {
    "start": "electron app/app.js",
    "postinstall": "install-app-deps",
    "build-python": "python scripts/build-python-env.py",
    "pack": "npm run build-python && webpack -p && build",
    "dist": "npm run build-python && webpack -p && build",
    "dev": "concurrently --raw 'webpack --progress --watch' 'npm run start'"
  },
  "build": {
    "appId": "com.tingbot.tide-electron",
    "app-category-type": "app-category-type=public.app-category.developer-tools",
    "extraResources": [
      "default.tingapp",
      "vendor"
    ],
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {
      "depends": ["python2.7"]
    },
    "rpm": {
      "depends": ["python"]
    },
    "asar": {
      "unpack": "*.node"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tingbot/tide-electron.git"
  },
  "keywords": [
    "Electron",
    "Tingbot"
  ],
  "licence": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/tingbot/tide-electron/issues"
  },
  "homepage": "https://github.com/tingbot/tide-electron#readme",
  "dependencies": {
    "brace": "~0.8.0",
    "electron-default-menu": "^0.1.1",
    "font-awesome-webpack": "0.0.4",
    "fs-extra": "^0.30.0",
    "jquery": "~2.2.3",
    "node-loader": "github:joerick/node-loader",
    "vue": "~1.0.21"
  },
  "devDependencies": {
    "babel-core": "~6.8.0",
    "babel-loader": "~6.2.4",
    "babel-plugin-transform-runtime": "~6.8.0",
    "babel-preset-es2015": "~6.6.0",
    "babel-runtime": "~6.6.1",
    "brace": "~0.8.0",
    "concurrently": "^2.1.0",
    "css-loader": "~0.23.1",
    "electron-builder": "5.18.0",
    "electron-prebuilt": "~1.1.0",
    "electron-rebuild": "^1.1.4",
    "file-loader": "~0.8.5",
    "font-awesome": "^4.6.1",
    "font-awesome-webpack": "0.0.4",
    "fs-extra": "^0.30.0",
    "jquery": "~2.2.3",
    "json-loader": "^0.5.4",
    "less": "^2.6.1",
    "less-loader": "^2.2.3",
    "style-loader": "^0.13.1",
    "url-loader": "~0.5.7",
    "vue": "~1.0.21",
    "vue-hot-reload-api": "~1.3.2",
    "vue-html-loader": "~1.2.2",
    "vue-loader": "~8.3.1",
    "vue-style-loader": "~1.0.0",
    "webpack": "~1.13.0",
    "webpack-dev-server": "~1.14.1"
  },
  "directories": {
    "buildResources": "assets"
  }
}
